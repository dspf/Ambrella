@model BuildingInspectionReport

<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="test-primary">Inspection Details</h2>
            <hr />
            <div class="mb-3 row">
                <label asp-for="BuildingName" class="p-0"></label>
                <input asp-for="BuildingName" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="BuildingAddress" class="p-0"></label>
                <input asp-for="BuildingAddress" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="BuildingLocation" class="p-0"></label>
                <input asp-for="BuildingLocation" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="NumberOfRooms" class="p-0"></label>
                <input asp-for="NumberOfRooms" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="IsBuildingVerified" class="p-0"></label>
                <input asp-for="IsBuildingVerified" class="form-control" />
            </div>
            
            <div class="mb-3 row">
                <label asp-for="InspectorNotes" class="p-0"></label>
                <input asp-for="InspectorNotes" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="InspectionDate" class="p-0"></label>
                <input asp-for="InspectionDate" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="RoomImage" class="p-0"></label>
                <input asp-for="RoomImage" type="file" class="form-control" accept="image/*" />
            </div>
            <div class="mb-3 row">
                <label asp-for="StudyImage" class="p-0"></label>
                <input asp-for="StudyImage" type="file" class="form-control" accept="image/*" />
            </div>
            <div class="mb-3 row">
                <label asp-for="ExteriorImage" class="p-0"></label>
                <input asp-for="ExteriorImage" type="file" class="form-control" accept="image/*" />
            </div>
            <div class="mb-3 row">
                <label asp-for="Kitchen" class="p-0"></label>
                <input asp-for="Kitchen" type="file" class="form-control" accept="image/*" />
            </div>
           
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-dark form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="BuildingInspection" asp-action="Index" class="btn btn-outline-secondary form-control">Building List</a>
            </div>
        </div>
    </div>
</form>
