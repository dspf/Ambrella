@model List<BuildingInspectionReport>

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Inspection Report List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="BuildingInspections" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-square"></i>Add Reports
            </a>
        </div>

    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Building Name
                </th>
                <th>
                    Location Area
                </th>
                <th>
                    Address
                </th>
                <th>
                    Number Of Rooms
                </th>
                <th>
                    Is Building Verified
                </th>
               
                <th>
                    Inspector Notes
                </th>
                <th>
                    Inspector Date
                </th>
                @*  <th>
                First Building
                </th>
                <th>
                Second Building
                </th>
                <th>
                Third Building
                </th>
                <th>
                Fourth Building
                </th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>

                    <td>@obj.BuildingName</td>
                    <td>@obj.BuildingLocation</td>
                    <td>@obj.BuildingAddress</td>
                    <td>@obj.NumberOfRooms</td>
                    <td>@obj.IsBuildingVerified</td>
                    <td>@obj.InspectorNotes</td>
                    <td>@obj.InspectionDate</td>
                    @*
                <td>
                <a href="@obj.FirstBuilding" target="_blank">
                <img src="@obj.FirstBuilding" alt="First Building " class="thumbnail-image" />
                </a>
                </td>
                <td>
                <a href="@obj.SecondBuilding" target="_blank">
                <img src="@obj.SecondBuilding" alt="Second Building " class="thumbnail-image" />
                </a>
                </td>
                <td>
                <a href="@obj.ThirdBuilding" target="_blank">
                <img src="@obj.ThirdBuilding" alt="Third Building " class="thumbnail-image" />
                </a>
                </td>
                <td>
                <a href="@obj.FourthBuilding" target="_blank">
                <img src="@obj.FourthBuilding" alt="Fourth Building " class="thumbnail-image" />
                </a>
                </td> *@

                </tr>
            }
        </tbody>
    </table>
    <div class="col-6 text-md-center">
        <a asp-controller="Building" asp-action="Search" class="btn btn-outline-secondary">
            Search
        </a>
    </div>
    <div>
        <a asp-controller="Inspector" asp-action="Assign" class="btn btn-primary">Assign Inspector</a>
    </div>
</div>
<style>
    .thumbnail-image {
        max-width: 100px;
        max-height: 60px;
    }
</style>
