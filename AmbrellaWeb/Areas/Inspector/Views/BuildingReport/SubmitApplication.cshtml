@model IEnumerable<BuildingInspectionReport>

<style>
    /* Card styles */
    .card {
        background-color: #ffdab9; /* Peach background */
        border-radius: 10px;
        padding: 20px;
        margin: 20px auto; /* Center the card horizontally */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        max-width: 500px;
    }

    /* Form styles */
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #fff; /* White background for form controls */
        color: #333; /* Text color */
    }

    label {
        font-weight: bold;
    }

    button[type="submit"] {
        background-color: #ff6347; /* Coral button color */
        color: #fff;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #ff4500; /* Darker coral color on hover */
        }
</style>

<div class="card">
    <h2>Inspector Report</h2>
    <form asp-controller="BuildingReport" asp-action="SubmitApplication" method="post">
        <div class="form-group">
            <label for="buildingReports">Select Building:</label>
            <select class="form-control" id="buildingReports" name="buildingReportsId">
                @foreach (var buildingReports in ViewBag.BuildingInspectionReports as List<BuildingInspectionReport>)
                {
                    <option value="@buildingReports.BuildingInspectionReportId">@buildingReports.BuildingName - @buildingReports.BuildingLocation, @buildingReports.BuildingAddress</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Select Institution:</label>
            <select class="form-control" id="institution" name="institutionId">
                @foreach (var institution in ViewBag.Intitutions)
                {
                    <option value="@institution.Id">@institution.Name</option>
                }
            </select>
        </div>

        <button type="submit">Submit Report</button>
    </form>
</div>
