 @model IEnumerable<CompanyInspectionReport>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inspector Report</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('https://thearchitecturedesigns.com/wp-content/uploads/2019/12/9-Corinthia-Hotel-London.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .content-wrapper {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 10px rgba(255, 255, 255, 0.1);
            margin-top: 50px;
            color: #fff;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.8);
            border: none;
            color: #fff;
            border-radius: 8px;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .card-header {
            background-color: rgba(0, 0, 0, 0.8);
            border: none;
            color: #fff;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .btn-submit {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="content-wrapper">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-primary text-center">Inspector Report</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="CompanyReport" asp-action="SubmitApplication" method="post">
                        <div class="form-group">
                            <label for="companyReports">Select Company:</label>
                            <select class="form-control" id="companyReports" name="companyReportsId">
                                @foreach (var companyReports in ViewBag.CompanyInspectionReports as List<CompanyInspectionReport>)
                                {
                                    <option value="@companyReports.CompanyInspectionReportId">@companyReports.CompanyName - @companyReports.CompanyLocation - @companyReports.CompanyAddress</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="companyReports">Select :</label>
                            <select class="form-control" id="companyReports" name="companyReportsId">
                                @foreach (var companyReports in ViewBag.CompanyInspectionReports as List<CompanyInspectionReport>)
                                {
                                    <option value="@companyReports.CompanyInspectionReportId">@companyReports.NumberOfBuildings - @companyReports.InspectionDate - @companyReports.CompanyRegistrationNumber</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="admin">Select Admin:</label>
                            <select class="form-control" id="admin" name="adminId">
                                @foreach (var admin in ViewBag.Administrators)
                                {
                                    <option value="@admin.Id">@admin.Name</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-submit">Submit Report</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

