@model IEnumerable<Ambrella.Models.Contract>

<div class="container-fluid" style="background-color: #FFF8DC; padding: 2rem;">
    <h2 class="text-center mb-4" style="font-family: 'Georgia', serif; color: #008B8B;">Received Contracts</h2>

    <form asp-controller="Contracts" asp-action="UploadSigned" method="post" enctype="multipart/form-data">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" style="background-color: #FFF; border-color: #00CED1;">
                <thead style="background-color: #008B8B; color: #FFF;">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Created By</th>
                        <th>Received At</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contract in Model)
                    {
                        <tr style="transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#E0FFFF';" onmouseout="this.style.backgroundColor='#FFF';">
                            <td>@contract.Title</td>
                            <td>@contract.Description</td>
                            <td>@contract.CreatedAt</td>
                            <td>
                                <a asp-controller="Contracts" asp-action="Download" asp-route-contractId="@contract.ContractId" class="btn btn-primary btn-sm" style="background-color: #008B8B; border-color: #008B8B; transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#00CED1';" onmouseout="this.style.backgroundColor='#008B8B';">Download</a>
                                <div class="mt-2">
                                    <input type="hidden" name="contractId" value="@contract.ContractId" />
                                    <input type="file" name="file" class="form-control" style="border-color: #00CED1; transition: border-color 0.3s ease;" onmouseover="this.style.borderColor='#008B8B';" onmouseout="this.style.borderColor='#00CED1';" />
                                    <button type="submit" class="btn btn-primary mt-2" style="background-color: #008B8B; border-color: #008B8B; transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#00CED1';" onmouseout="this.style.backgroundColor='#008B8B';">Upload Signed</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
