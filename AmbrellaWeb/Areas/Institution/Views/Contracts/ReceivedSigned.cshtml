@model IEnumerable<Ambrella.Models.Contract>

<div class="container-fluid" style="background-color: #F0F8FF; padding: 2rem;">
    <h2 class="text-center mb-4" style="font-family: 'Georgia', serif; color: #4B0082;">Received Signed Contracts</h2>

    <form asp-controller="Contracts" asp-action="RecievedSigned" method="post">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" style="background-color: #FFF; border-color: #BA55D3;">
                <thead style="background-color: #4B0082; color: #FFF;">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Received At</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contract in Model)
                    {
                        <tr style="transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#E6E6FA';" onmouseout="this.style.backgroundColor='#FFF';">
                            <td>@contract.Title</td>
                            <td>@contract.Description</td>
                            <td>@contract.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <a asp-controller="Contracts" asp-action="DownloadSigned" asp-route-contractId="@contract.ContractId" class="btn btn-primary btn-sm" style="background-color: #4B0082; border-color: #4B0082; transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#8A2BE2';" onmouseout="this.style.backgroundColor='#4B0082';">Download</a>
                                <div class="mt-2">
                                    <input type="hidden" name="contractIds" value="@contract.ContractId" />
                                    <select name="statuses\[@contract.ContractId\]" class="form-control" style="border-color: #BA55D3; transition: border-color 0.3s ease;" onmouseover="this.style.borderColor='#4B0082';" onmouseout="this.style.borderColor='#BA55D3';">
                                        <option value="@ContractStatus.Accepted">Accept</option>
                                        <option value="@ContractStatus.Rejected">Reject</option>
                                    </select>
                                    <button type="submit" class="btn btn-primary mt-2" style="background-color: #4B0082; border-color: #4B0082; transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#8A2BE2';" onmouseout="this.style.backgroundColor='#4B0082';">Submit</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>