@model IEnumerable<Ambrella.Models.ApplicationInstitution>

<h2 class="text-center mb-4">Applications Received</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover" style="
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #fff;
    ">
        <thead class="thead-dark" style="
            background-color: #343a40;
            color: #fff;
        ">
            <tr>
                <th>Building</th>
                <th>Landlord</th>
                <th>Student</th>
                <th>Application Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var application in Model)
            {
                <tr style="transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#e9ecef';" onmouseout="this.style.backgroundColor='inherit';">
                    <td>@application.Building.Name</td>
                    <td>@application.Building.Landlord.UserName</td>
                    <td>@application.Student.UserName</td>
                    <td>@application.SubmittedOn.ToString("MMM dd, yyyy")</td>
                    <td>@application.Status</td>
                    <td>
                        <form asp-controller="Institutions" asp-action="UpdateStatus" method="post" class="form-inline">
                            <input type="hidden" name="applicationId" value="@application.Id" />
                            <select name="status" asp-for="@application.Status" asp-items="@Html.GetEnumSelectList<LearnerStatus>()" class="form-control mr-2" style="
                                border-color: #ced4da;
                                transition: border-color 0.3s ease;
                                " onmouseover="this.style.borderColor='#80bdff';" onmouseout="this.style.borderColor='#ced4da';">
                            </select>
                            <button type="submit" class="btn btn-primary" style="
                                background-color: #007bff;
                                border-color: #007bff;
                                color: #fff;
                                transition: background-color 0.3s ease;
                                " onmouseover="this.style.backgroundColor='#0069d9';" onmouseout="this.style.backgroundColor='#007bff';">
                                Update Status
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>