
@model Building

<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="test-primary">Building Details</h2>
            <hr />
            <div class="mb-3 row">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="Location" class="p-0"></label>
                <input asp-for="Location" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="Address" class="p-0"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="Capacity" class="p-0"></label>
                <input asp-for="Capacity" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="Cost" class="p-0"></label>
                <input asp-for="Cost" class="form-control" />
            </div>
            <div class="mb-3 row">
                <label asp-for="RoomImage" class="p-0"></label>
                <input asp-for="RoomImage" type="file" class="form-control" accept="image/*" />
            </div>
            <div class="mb-3 row">
                <label class="col-form-label">Exterior Image:</label>
                <input type="file" name="ExteriorImage" class="form-control" accept="image/*" />
            </div>
            <div class="mb-3 row">
                <label class="col-form-label">Study Image:</label>
                <input type="file" name="StudyImage" class="form-control" accept="image/*" />
            </div>
            
            <div class="mb-3 row">
                <label class="col-form-label">Kitchen Image:</label>
                <input type="file" name="kitchenImage" class="form-control" accept="image/*" />
            </div>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-dark form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Building" asp-action="Index" class="btn btn-outline-secondary form-control">Building List</a>
            </div>
        </div>
    </div>
</form>
