@model List<Building>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Building List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        .thumbnail-image {
            max-width: 100px;
            max-height: 60px;
            object-fit: cover;
        }

        .table-container {
            overflow-x: auto;
        }

        .add-building-btn {
            display: flex;
            align-items: center;
        }

            .add-building-btn i {
                margin-right: 5px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-md-6">
                <h2 class="text-primary">
                    Building List
                </h2>
            </div>

            <div class="col-md-6 text-md-right text-center">
                <a asp-controller="Building" asp-action="Create" class="btn btn-outline-primary add-building-btn">
                    <i class="bi bi-plus-square"></i>Add Building
                </a>
            </div>
        </div>

        <div class="table-container">
            <table class="table table-bordered table-striped table-responsive-md">
                <thead class="thead-dark">
                    <tr>
                        <th>Building Name</th>
                        <th>Location Area</th>
                        <th>Address</th>
                        <th>Building Capacity</th>
                        <th>Building Cost</th>
                        <th>Room Image</th>
                        <th>Exterior Image</th>
                        <th>Study Image</th>
                        <th>Kitchen Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.Location</td>
                            <td>@obj.Address</td>
                            <td>@obj.Capacity</td>
                            <td>@obj.Cost</td>
                            <td>
                                <a href="@obj.RoomImage" target="_blank">
                                    <img src="@obj.RoomImage" alt="Room Image" class="thumbnail-image" />
                                </a>
                            </td>
                            <td>
                                <a href="@obj.ExteriorImage" target="_blank">
                                    <img src="@obj.ExteriorImage" alt="Exterior Image" class="thumbnail-image" />
                                </a>
                            </td>
                            <td>
                                <a href="@obj.StudyImage" target="_blank">
                                    <img src="@obj.StudyImage" alt="Study Image" class="thumbnail-image" />
                                </a>
                            </td>
                            <td>
                                <a href="@obj.KitchenImage" target="_blank">
                                    <img src="@obj.KitchenImage" alt="Kitchen Image" class="thumbnail-image" />
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col text-center mt-3">
                <a asp-controller="Building" asp-action="Search" class="btn btn-outline-secondary">
                    Search
                </a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
