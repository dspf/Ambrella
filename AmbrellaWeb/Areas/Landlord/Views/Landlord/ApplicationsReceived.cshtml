@model IEnumerable<Ambrella.Models.StudentApplicationBuilding>

@{
    ViewData["Title"] = "Applications Received";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="padding: 2rem;">
    <h2 class="text-center mb-4" style="font-family: 'Georgia', serif; color: #4B0082;">Applications Received</h2>

    <div class="table-responsive">
        <table class="table table-hover" style="background-color: #2E2E2E; color: #FFF; border-color: #4B0082;">
            <thead style="background-color: #4B0082; color: #FFF;">
                <tr>
                    <th scope="col">Building</th>
                    <th scope="col">Student</th>
                    <th scope="col">Application Date</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var application in Model)
                {
                    <tr style="transition: background-color 0.3s ease;" onmouseover="this.style.backgroundColor='#6A5ACD';" onmouseout="this.style.backgroundColor='#2E2E2E';">
                        <td>@application.Building.Name</td>
                        <td>@application.Student.Name</td>
                        <td>@application.ApplicationDate.ToString("MMMM dd, yyyy")</td>
                        <td>@application.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #6A5ACD !important;
    }
</style>
