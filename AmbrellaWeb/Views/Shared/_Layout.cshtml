@using Ambrella.Utility

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AmbrellaWeb</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AmbrellaWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        /* Add your CSS styles here */
        body {
            background-image: url('https://images.unsplash.com/photo-1522708323590-d24dbb6b0267?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-secondary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AmbrellaWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                         <li class="nav-item">
                        <a class="nav-link" asp-area="Administrator" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-area="Administrator" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> 

                        @if (User.IsInRole(SD.Role_Landlord))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Company & Building
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Landlord" asp-controller="Building" asp-action="Index">Add Buildings </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Landlord" asp-controller="Company" asp-action="Index">Add Company</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Applications
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Landlord" asp-controller="Landlord" asp-action="SubmitApplication"> Apply To Institutions </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Landlord" asp-controller="CApplication" asp-action="SubmitApplication"> Register Company</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Notifications
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Landlord" asp-controller="Notifications" asp-action="Index"> Notifications </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Landlord" asp-controller="Landlord" asp-action="ApplicationsReceived">Student Viewing </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Contracts" asp-action="Received"> Contract Recieved </a>
                                    </li>
                                </ul>
                            </li>





                        }
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Notification MGT
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Administrator" asp-controller="AssignmentNotifications" asp-action="Index">Inspector Notifications </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Administrator" asp-controller="PendingReports" asp-action="PendingApplications">Reports  </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>

                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Administrator" asp-controller="CAdmin" asp-action="PendingApplications">Applications</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Administrator" asp-controller="Inspector" asp-action="Assign">Assign Inspector</a>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_Institution))
                        {


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Institution Details
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Institutions" asp-action="Create">Update Details</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Institutions" asp-action="Index">Institution Details</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Institutions" asp-action="PendingApplications">Applications </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Institutions" asp-action="ApplicationsReceived">Student Applications </a>
                                    </li>
                                </ul>
                            </li>


                           
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Contract Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Contracts" asp-action="Upload">Upload Contract</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Contracts" asp-action="Send">Send Contract</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Contracts" asp-action="ReceivedSigned">Recieved Signed</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="Inspections" asp-action="Assign">Assign Inspector</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Institution" asp-controller="InstitutionRecieveNotification" asp-action="Index">Inspector Notification</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole(SD.Role_Inspector))
                        {

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Assignemnts
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item " asp-area="Inspector" asp-controller="Assignments" asp-action="PendingApplications">Ambrella Assignemnts </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item  " asp-area="Inspector" asp-controller="Assignments" asp-action="InstitutionPendingApplications">Institution Assignments </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item " asp-area="Inspector" asp-controller="InspectorRecieveNotification" asp-action="Index">Ambrella Notifications </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Reports
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item " asp-area="Inspector" asp-controller="CompanyInspections" asp-action="Index"> Company Report</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item " asp-area="Inspector" asp-controller="BuildingInspections" asp-action="Index"> Building Report</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="nav-item">
                                        <a class="dropdown-item " asp-area="Inspector" asp-controller="InspectorRecieveNotification" asp-action="Index">Ambrella Notifications </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Reports
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item " asp-area="Inspector" asp-controller="CompanyReport" asp-action="SubmitApplication"> Approve Company </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item " asp-area="Inspector" asp-controller="BuildingReport" asp-action="SubmitApplication"> Approve Building </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>

                                </ul>
                            </li>




                        }
                        @if (User.IsInRole(SD.Role_Student))
                        {

                            <li class="nav-item">
                                <a class="nav-link" asp-area="Student" asp-controller="Residences" asp-action="Index">Schedule Viewing</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Student" asp-controller="Residences" asp-action="SendApplication">Apply For Residence </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " asp-area="Student" asp-controller="StudentNotifications" asp-action="Index">Institution Notifications </a>
                            </li>

                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @*  <footer class="border-top footer bg-primary text-muted">
        <div class="container text-center">
            MockAmbrella <i class="bi bi-heart-fill"></i>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
